{{#layout}}
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a href="/user">user</a></li>
                <li class="breadcrumb-item active" aria-current="page">View</li>
            </ol>
        </nav>
    </div>
</div>
<p></p>
<div class="row">
    <div class="col-12">
        <table class="table table-hover">
            <tr>
                <th>이름</th>
                <td>{{user.username}}</td>
            </tr>
            <tr>
                <th>비밀번호</th>
                <td>{{user.password}}</td>
            </tr>
            <tr>
                <th>권한</th>
                <td> {{#user.roles}} {{.}} {{/user.roles}} </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12 text-right">
        <form method="post" action="/user/delete?id={{user.id}}">
            <a href="/user/update?id={{user.id}}" class="btn btn-primary">update</a>
            <button type="submit" class="btn btn-primary">delete</button>
            <a href="/user/list" class="btn btn-primary">list</a>
        </form>
    </div>
</div>
